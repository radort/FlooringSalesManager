<Window x:Class="FlooringSalesManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Меню" Height="350" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Margin="65,0,0,0">
            <TextBlock FontSize="20" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"><Run Language="bg-bg" Text="Добре дошли!"/><LineBreak/><Run Language="bg-bg"/></TextBlock>

            <Button Content="Нова поръчка" Width="200" Height="40" FontSize="16" Margin="0 0 0 10" Click="NewOrder_Click"/>
            <Button Content="Списък с поръчки" Width="200" Height="40" FontSize="16" Margin="0 0 0 10" Click="OrderList_Click"/>
            <Button Content="Списък с продукти" Width="200" Height="40" FontSize="16" Margin="0 0 0 10" Click="ProductList_Click"/>
        </StackPanel>
    </Grid>
</Window>
